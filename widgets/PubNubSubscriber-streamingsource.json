{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "PubNub Subscriber",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "label": "Reference Name",
          "widget-type": "textbox",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "label": "Channels",
          "name": "channels",
          "widget-type": "dsv",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "label": "Subscriber Key",
          "widget-type": "textbox",
          "name": "subscriber-key",
          "widget-attributes": {
            "placeholder": "Subscriber key configured for channels"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "label": "Filter Expression",
          "widget-type": "textbox",
          "name": "filter-expression",
          "widget-attributes": {
            "placeholder": "price > 100.00 && channel == 'AAPL'"
          }
        },
        {
          "label": "Connection Timeout",
          "widget-type": "textbox",
          "name": "connection-timeout",
          "widget-attributes": {
            "placeholder": "Time in milliseconds"
          }
        },
        {
          "label": "Socks Proxy Hostname",
          "widget-type": "textbox",
          "name": "proxy-hostname",
          "widget-attributes": {
            "placeholder": "Hostname or IP address for socks proxy"
          }
        },
        {
          "label": "Socks Proxy Port",
          "widget-type": "textbox",
          "name": "proxy-port",
          "widget-attributes": {
            "placeholder": "Port for socks proxy"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "default-schema": {
          "name": "subscriber",
          "type": "record",
          "fields": [
            {
              "name": "timetoken",
              "type": "long"
            },
            {
              "name": "channel",
              "type": ["string", "null"]
            },
            {
              "name": "publisher",
              "type": ["string", "null"]
            },
            {
              "name": "payload",
              "type": ["string", "null"]
            }
          ]
        }
      }
    }
  ]
}
