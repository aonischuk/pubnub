{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "PubNub Subscriber",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "label": "Channels",
          "name": "channels",
          "widget-type": "dsv",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "textbox",
          "label": "Subscriber Key",
          "name": "subscriber-key",
          "widget-attributes": {
            "placeholder": "Subscriber key configured for channels"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "descripton" : "",
      "properties": [
        {
          "name": "reconnection-policy",
          "label" : "Reconnection Policy",
          "widget-type": "select",
          "widget-attributes": {
            "default": "Linear",
            "values": ["Linear", "Exponential", "None"]
          }
        },
        {
          "name": "secure",
          "label" : "Use secure",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "true"
          }
        },
        {
          "name": "use-proxy",
          "label" : "Use Proxy",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Proxy Hostname",
          "name": "proxy-hostname",
          "widget-properties" : {
            "placeholder" : "Proxy hostname"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Proxy Port",
          "name": "proxy-port",
          "widget-properties" : {
            "placeholder" : "Proxy port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Connection Timeout",
          "name": "connection-timeout",
          "widget-properties" : {
            "default" : "100"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Auth Key",
          "name": "auth-key",
          "widget-attributes": {
            "placeholder": "Authorization key"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "default-schema": {
          "name": "subscriber",
          "type": "record",
          "fields": [
            {
              "name": "timetoken",
              "type": "long"
            },
            {
              "name": "channel",
              "type": ["string", "null"]
            },
            {
              "name": "publisher",
              "type": ["string", "null"]
            },
            {
              "name": "payload",
              "type": ["string", "null"]
            }
          ]
        },
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}
