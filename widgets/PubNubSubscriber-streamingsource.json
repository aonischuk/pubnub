{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "PubNub",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "label": "Reference Name",
          "widget-type": "textbox",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "label": "Channels",
          "name": "channels",
          "widget-type": "dsv",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "label": "Subscriber Key",
          "widget-type": "textbox",
          "name": "subscriber-key",
          "widget-attributes": {
            "placeholder": "Subscriber key configured for channels"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "descripton" : "",
      "properties": [
        {
          "name": "secure",
          "label" : "Use secure",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "true"
          }
        },
        {
          "name": "reconnection-policy",
          "label" : "Reconnection Policy",
          "widget-type": "select",
          "widget-attributes": {
            "default": "Linear",
            "values": ["Linear", "Exponential", "None"]
          }
        },
        {
          "label": "Connection Timeout (seconds)",
          "name": "connection-timeout",
          "widget-attributes" : {
            "default" : "5"
          }
        },
        {
          "name": "max-reconnect-attempts",
          "label" : "Maximum Reconnect Attempts",
          "widget-type": "number",
          "widget-attributes": {
            "default": "5",
            "min": "1",
            "max": "100"
          }
        },
        {
          "name": "use-proxy",
          "label" : "Use Proxy",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "name": "proxy-type",
          "label" : "Type of Proxy",
          "widget-type": "select",
          "widget-attributes": {
            "default": "HTTP",
            "values": ["HTTP", "SOCKS", "Direct"]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Proxy Hostname",
          "name": "proxy-hostname",
          "widget-attributes" : {
            "placeholder" : "Proxy hostname"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Proxy Port",
          "name": "proxy-port",
          "widget-attributes" : {
            "placeholder" : "Proxy port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Authorization Key",
          "name": "auth-key",
          "widget-attributes": {
            "placeholder": "Authorization key"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "default-schema": {
          "name": "subscriber",
          "type": "record",
          "fields": [
            {
              "name": "timetoken",
              "type": "long"
            },
            {
              "name": "payload",
              "type": ["string", "null"]
            },
            {
              "name": "channel",
              "type": ["string", "null"]
            },
            {
              "name": "publisher",
              "type": ["string", "null"]
            },
            {
              "name": "subscription",
              "type": ["string", "null"]
            }
          ]
        }
      }
    }
  ]
}
